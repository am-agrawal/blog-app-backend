# Database Configuration
# For external MySQL server:
DATABASE_URL=mysql+pymysql://username:password@your-mysql-host:3306/database_name

# Examples:
# Local MySQL: mysql+pymysql://root:password@localhost:3306/blog_app
# Remote MySQL: mysql+pymysql://user:pass@mysql.example.com:3306/blog_app
# Cloud MySQL (AWS RDS): mysql+pymysql://admin:password@your-rds-endpoint:3306/blog_app
# Cloud MySQL (Google Cloud SQL): mysql+pymysql://root:password@/cloudsql/project:region:instance/blog_app

# JWT Settings
SECRET_KEY=your-super-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Email Settings
EMAIL_USER=your-email@example.com
EMAIL_PASSWORD=your-app-password

# App Settings
APP_NAME=Blog App Backend
DEBUG=True 
ALLOWED_ORIGINS=http://127.0.0.1:3000